---
import Layout from '../layouts/Layout.astro';
import { companyData } from '../data/data.js';
---

<Layout title={`${companyData.company.name} - ${companyData.company.tagline}`}>
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-primary to-secondary text-white">
      <div class="container mx-auto px-6 py-24">
        <div class="flex flex-col items-center text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6">
            {companyData.company.tagline}
          </h1>
          <p class="text-xl md:text-2xl mb-8 max-w-2xl">
            {companyData.mission.statement}
          </p>
          <button class="bg-white text-primary px-8 py-3 rounded-lg font-semibold hover:bg-opacity-90 transition-all">
            Comienza Gratis
          </button>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold text-center mb-16">Nuestros Servicios</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          {companyData.services.map((service) => (
            <div class="bg-white p-8 rounded-xl shadow-lg">
              <div class="w-12 h-12 bg-primary bg-opacity-10 rounded-lg flex items-center justify-center mb-6">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {service.icon === "brain" && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  )}
                  {service.icon === "cloud" && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
                  )}
                  {service.icon === "shield" && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                  )}
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-4">{service.name}</h3>
              <p class="text-gray-600 mb-4">{service.description}</p>
              <ul class="text-gray-600 space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-center">
                    <svg class="w-4 h-4 mr-2 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div>
            <div class="text-4xl font-bold text-primary mb-2">{companyData.stats.clients}+</div>
            <div class="text-gray-600">Clientes Satisfechos</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-primary mb-2">{companyData.stats.projects}+</div>
            <div class="text-gray-600">Proyectos Completados</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-primary mb-2">{companyData.stats.teamMembers}+</div>
            <div class="text-gray-600">Miembros del Equipo</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-primary mb-2">{companyData.stats.countries}</div>
            <div class="text-gray-600">Países</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold text-center mb-16">Nuestro Equipo Directivo</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          {companyData.leadership.map((leader) => (
            <div class="bg-white p-8 rounded-xl shadow-lg text-center">
              <div class="w-32 h-32 mx-auto mb-6 rounded-full bg-gray-200 overflow-hidden">
                <img src={leader.image} alt={leader.name} class="w-full h-full object-cover" />
              </div>
              <h3 class="text-xl font-semibold mb-2">{leader.name}</h3>
              <p class="text-primary font-medium mb-4">{leader.position}</p>
              <p class="text-gray-600">{leader.bio}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold text-center mb-16">Lo que dicen nuestros clientes</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          {companyData.testimonials.map((testimonial) => (
            <div class="bg-gray-50 p-8 rounded-xl shadow-lg">
              <div class="flex items-center mb-6">
                <div class="w-16 h-16 rounded-full bg-gray-200 overflow-hidden mr-4">
                  <img src={testimonial.image} alt={testimonial.name} class="w-full h-full object-cover" />
                </div>
                <div>
                  <h3 class="text-xl font-semibold">{testimonial.name}</h3>
                  <p class="text-gray-600">{testimonial.position}, {testimonial.company}</p>
                </div>
              </div>
              <p class="text-gray-700 italic">"{testimonial.text}"</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <div>
            <h2 class="text-4xl font-bold mb-8">Contáctanos</h2>
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mt-1 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1">Dirección</h3>
                  <p class="text-gray-600">
                    {companyData.contact.address.street}<br />
                    {companyData.contact.address.city}, {companyData.contact.address.state} {companyData.contact.address.zipCode}<br />
                    {companyData.contact.address.country}
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mt-1 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1">Email</h3>
                  <p class="text-gray-600">{companyData.company.email}</p>
                </div>
              </div>
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mt-1 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold mb-1">Teléfono</h3>
                  <p class="text-gray-600">{companyData.company.phone}</p>
                </div>
              </div>
            </div>
          </div>
          <div>
            <h2 class="text-4xl font-bold mb-8">Síguenos</h2>
            <div class="flex space-x-4">
              <a href={companyData.contact.socialMedia.linkedin} class="w-12 h-12 bg-primary bg-opacity-10 rounded-lg flex items-center justify-center hover:bg-opacity-20 transition-all">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
              <a href={companyData.contact.socialMedia.twitter} class="w-12 h-12 bg-primary bg-opacity-10 rounded-lg flex items-center justify-center hover:bg-opacity-20 transition-all">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a href={companyData.contact.socialMedia.facebook} class="w-12 h-12 bg-primary bg-opacity-10 rounded-lg flex items-center justify-center hover:bg-opacity-20 transition-all">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href={companyData.contact.socialMedia.instagram} class="w-12 h-12 bg-primary bg-opacity-10 rounded-lg flex items-center justify-center hover:bg-opacity-20 transition-all">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.899 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.899-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.76-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout> 